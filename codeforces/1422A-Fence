#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
 
int a[5];
 
int main(){
    ios::sync_with_stdio(false);
    int T;
    cin >> T;
    while(T--){
        cin >> a[0] >> a[1] >> a[2];
        sort(a, a+3);
        int ans = max(1, a[2]-a[1]-a[0]+1);
        cout << ans << endl;
    }
}